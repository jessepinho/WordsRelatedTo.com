%p#notice= notice

%article.word
  .word-graph-wrapper
    %canvas.word-graph

      %h1
        Words related to
        %span.word{:'data-word-id' => @word.id}
          = @word

      %ul
        - @word.related_words.each do |w|
          %li{:'data-word-id' => w.id}
            = link_to w, word_path(w)

= link_to 'Edit', edit_word_path(@word)
= link_to 'Back', words_path

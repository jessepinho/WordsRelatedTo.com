= form_for(@word) do |f|
  - if @word.errors.any?
    #error_explanation
      %h2
        = pluralize(@word.errors.count, "error")
        prohibited this word from being saved:
      %ul
      - @word.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :word
    = f.text_field :word
  .actions
    = f.submit
